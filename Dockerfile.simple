FROM node:20-alpine

WORKDIR /app

# Copiar package.json e instalar dependencias
COPY AIContentCreator/node/package*.json ./
RUN npm install --production

# Copiar código de la aplicación
COPY AIContentCreator/node/*.js ./

# Copiar archivos estáticos
COPY AIContentCreator/vistas/ ./vistas/
COPY AIContentCreator/css/ ./css/
COPY AIContentCreator/js/ ./js/
COPY AIContentCreator/img/ ./img/

# Exponer puerto
EXPOSE 3000

# Comando de inicio
CMD ["node", "server.js"]

